<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Calendar</title>
        <script type="module" src="./js/calendar_controleur.js"></script>
        <link rel="stylesheet" href="./styles/calendar.css" />
    </head>
    <body>
        <h1>Calendar</h1>
        <h3>Sélectionnez un mois</h3>
        <select class="mois" id="mois">
            <option id="month-1" value="1">Janvier</option>
            <option id="month-2" value="2">Février</option>
            <option id="month-3" value="3">Mars</option>
            <option id="month-4" value="4">Avril</option>
            <option id="month-5" value="5">Mai</option>
            <option id="month-6" value="6">Juin</option>
            <option id="month-7" value="7">Juillet</option>
            <option id="month-8" value="8">Août</option>
            <option id="month-9" value="9">Septembre</option>
            <option id="month-10" value="10">Octobre</option>
            <option id="month-11" value="11">Novembre</option>
            <option id="month-12" value="12">Décembre</option>
        </select>
        <input type="button" class="leftYear" id="leftYear" value="<" /><span
            class="displayedYear"
            id="displayedYear"
        >
            Year </span
        ><input type="button" class="rightYear" id="rightYear" value=">" />

        <div class="listAgenda" id="listAgenda">
            <div class="msgAgenda" id="msgAgenda"></div>
            <select class="selectionAgenda" id="selectionAgenda"></select>
            <div class="agendasSelectionnes" id="agendasSelectionnes"></div>
        </div>
        <h3>Liste des rdvs associés</h3>
        <div class="listRdvs" id="listRdvs"></div>
        <div class="calendarbox" id="calendarbox">
            <div class="container" id="container">
                <div class="header" id="header"></div>
                <div class="weekdays" id="weekdays">
                    <div>Lundi</div>
                    <div>Mardi</div>
                    <div>Mercredi</div>
                    <div>Jeudi</div>
                    <div>Vendredi</div>
                    <div>Samedi</div>
                    <div>Dimanche</div>
                </div>
                <div id="calendar" class="calendar"></div>
            </div>
            <div class="rdvbox" id="rdvbox">
                <h1 style="text-align: center">Liste rdvs</h1>
                <div class="rdvday" id="rdvday"></div>
            </div>
        </div>
    </body>
</html>
